@page "/enrollments"
@inject StudentCourseApp.Services.EnrollmentService EnrollmentService
@inject NavigationManager Navigation

<h3>Enrollments</h3>

<div class="mb-3">
    <button class="btn btn-dark-purple" @onclick="GoToAddEnrollment">
        <i class="bi bi-plus-circle"></i> Enroll Student
    </button>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Grade</th>
            <th>Percentage</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in enrollments)
        {
            <tr>
                <td>@e.Student.Name</td>
                <td>@e.Course.Title</td>
                <td>@e.Grade</td>
                <td>@(e.Percentage.ToString("0.##") ?? "-")</td>
                <td>
                    <button class="btn btn-blue-purple btn-sm" @onclick="() => EditGrade(e.Id)">
                        <i class="bi bi-pencil-square"></i> Edit
                    </button>
                    <button class="btn btn-navy btn-sm mx-2" @onclick="() => DeregisterStudent(e)">
                        <i class="bi bi-x-circle"></i> Deregister
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn btn-deep-purple btn-sm" @onclick="() => BackToHome()">
        Back To Home
    </button>
</div>

@code {
    private List<StudentCourseApp.Models.Enrollment> enrollments = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadEnrollments();
    }

    private void GoToAddEnrollment()
    {
        Navigation.NavigateTo("/enrollments/add");
    }

    private void EditGrade(int Id)
    {
        Navigation.NavigateTo($"/enrollments/edit/{Id}");
    }

    private async Task DeregisterStudent(StudentCourseApp.Models.Enrollment enrollment)
    {
        if (enrollment != null)
        {
            await EnrollmentService.Deactivate(enrollment);
            await LoadEnrollments();
        }
    }

    private async Task LoadEnrollments()
    {
        enrollments = await EnrollmentService.GetActiveEnrollments();
    }

    private void BackToHome()
    {
        Navigation.NavigateTo($"/");
    }
}
